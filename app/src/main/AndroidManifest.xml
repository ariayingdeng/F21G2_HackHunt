<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.f21g2_hackhunt">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".StarterApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.F21G2_HackHunt"
        android:usesCleartextTraffic="true"
        tools:ignore="Instantiatable">
        <activity
            android:name=".activities.ViewPostActivity"
            android:parentActivityName=".activities.UserPostsActivity"></activity>
        <activity
            android:name=".activities.NewPostActivity"
            android:parentActivityName=".activities.MainActivity" />
        <activity
            android:name=".activities.UserPostsActivity"
            android:parentActivityName=".activities.MainActivity" />
        <activity android:name=".activities.LaunchingActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.LoginActivity" />
        <activity android:name=".StarterApplication" />
        <activity android:name=".activities.MainActivity" />
    </application>

</manifest>